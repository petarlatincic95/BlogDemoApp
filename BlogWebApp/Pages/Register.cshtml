@page
@model BlogWebApp.Pages.RegisterModel
@{
}


<div clss="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
           
            <h1 class="mt-5 mb-3 h3">Reigster</h1>
            <partial name="_Notification">

            <form method="post">

                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" class="form-control" asp-for="@Model.RegisterViewModel.Username" required/>
                    <span class="text-danger" asp-validation-for="@Model.RegisterViewModel.Username"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" asp-for="@Model.RegisterViewModel.Email" required/>
                    <span class="text-danger" asp-validation-for="@Model.RegisterViewModel.Email"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control" asp-for="@Model.RegisterViewModel.Password" required minlength="6"/>
                    <span class="text-danger" asp-validation-for="@Model.RegisterViewModel.Password"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn bg-dark text-light">Register</button>
                </div>

            </form>
        </div>
    </div>

</div>
